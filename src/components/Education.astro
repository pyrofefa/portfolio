---
import i18next from "i18next";
import SectionContainer from "./SectionContainer.astro";

const t = i18next.t.bind(i18next);

const education = [
  {
    degree: t("education.degree1.title"),
    institution: t("education.degree1.institution"),
    period: t("education.degree1.period"),
    description: t("education.degree1.description"),
  },
  {
    degree: t("education.degree2.title"),
    institution: t("education.degree2.institution"),
    period: t("education.degree2.period"),
    description: t("education.degree2.description"),
  },
];
---

<SectionContainer id="education" class="py-20">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-white">
        {t("education.title")}
      </h2>
      <p class="text-gray-600 dark:text-gray-400 text-lg max-w-2xl mx-auto">
        {t("education.subtitle")}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {
        education.map((edu) => (
          <div class="bg-gray-100 dark:bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-gray-200 dark:border-white/10 hover:border-blue-500/50 transition-all hover:scale-[1.02]">
            <div class="mb-4">
              <div class="text-sm text-blue-600 dark:text-blue-400 font-semibold mb-2">
                {edu.period}
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{edu.degree}</h3>
              <p class="text-gray-600 dark:text-gray-400 font-medium">{edu.institution}</p>
            </div>
            {edu.description && (
              <p class="text-gray-700 dark:text-gray-300 text-sm leading-relaxed">
                {edu.description}
              </p>
            )}
          </div>
        ))
      }
    </div>
  </div>
</SectionContainer>
