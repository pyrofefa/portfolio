---
interface Props {
  title: string;
  description: string;
  image?: string;
  tags: string[];
  link?: string;
  github?: string;
}

const { title, description, image, tags, link, github } = Astro.props;

// Detect if link is internal (starts with /)
const isInternalLink = link?.startsWith('/');
const isInternalGithub = github?.startsWith('/');
---

<article
  class="bg-gray-100 dark:bg-white/5 backdrop-blur-sm rounded-lg border border-gray-200 dark:border-white/10 overflow-hidden hover:border-blue-500/50 transition-all hover:scale-[1.02] group"
>
  <!-- Project Image -->
  <div
    class="aspect-video bg-gradient-to-br from-blue-500/20 to-purple-500/20 relative overflow-hidden"
  >
    {
      image ? (
        <img src={image} alt={title} class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-6xl opacity-50">
          ðŸ’¼
        </div>
      )
    }
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"
    >
    </div>
  </div>

  <!-- Project Content -->
  <div class="p-6">
    <h3
      class="text-xl font-bold mb-2 text-gray-900 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
    >
      {title}
    </h3>

    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4 line-clamp-4">
      {description}
    </p>

    <!-- Tech Stack Tags -->
    <div class="flex flex-wrap gap-2 mb-4">
      {
        tags.map((tag) => (
          <span class="px-3 py-1 bg-blue-100 dark:bg-blue-500/10 text-blue-700 dark:text-blue-300 text-xs rounded-full border border-blue-200 dark:border-blue-500/20">
            {tag}
          </span>
        ))
      }
    </div>

    <!-- Links -->
    <div class="flex gap-3">
      {
        link && (
          <a
            href={link}
            target={isInternalLink ? undefined : "_blank"}
            rel={isInternalLink ? undefined : "noopener"}
            class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 flex items-center gap-1 transition-colors"
          >
            View Details â†’
          </a>
        )
      }
      {
        github && (
          <a
            href={github}
            target={isInternalGithub ? undefined : "_blank"}
            rel={isInternalGithub ? undefined : "noopener"}
            class="text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white flex items-center gap-1 transition-colors"
          >
            GitHub
          </a>
        )
      }
    </div>
  </div>
</article>
