---

<SectionContainer id="about" class="py-20">
  <div class="max-w-6xl mx-auto px-4 md:px-6">
    <h2
      class="text-3xl md:text-4xl font-bold mb-12 text-center text-gray-900 dark:text-white"
    >
      {t("about.title")}
    </h2>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Left: Bio -->
      <div>
        <div
          class="bg-gray-100 dark:bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-gray-200 dark:border-white/10 h-full"
        >
          <div class="flex items-baseline gap-3 mb-4">
            <span class="text-5xl font-bold text-blue-600 dark:text-blue-400"
              >9+</span
            >
            <span class="text-xl text-gray-600 dark:text-gray-400"
              >{t("about.yearsExperience")}</span
            >
          </div>

          <p class="text-gray-700 dark:text-gray-300 leading-relaxed mb-4">
            {t("about.bio1")}
          </p>

          <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
            {t("about.bio2")}
          </p>
        </div>
      </div>

      <!-- Right: Skills -->
      <div>
        <h3 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">
          {t("about.skillsTitle")}
        </h3>
        <div class="grid grid-cols-2 gap-4">
          {
            skills.map((skill) => (
              <div class="bg-gray-100 dark:bg-white/5 backdrop-blur-sm rounded-lg p-4 border border-gray-200 dark:border-white/10 hover:border-blue-500/50 transition-all hover:scale-105">
                <div class="flex items-center gap-3">
                  <span class="text-3xl">{skill.icon}</span>
                  <span class="font-semibold text-xs text-gray-900 dark:text-gray-200">
                    {skill.name}
                  </span>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</SectionContainer>
