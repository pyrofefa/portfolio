---
interface Props {
  title: string;
  company?: string;
  description: string;
  link?: string;
  date: string;
}

const { title, company, description, link, date } = Astro.props;
---

<div class="relative">
  <!-- Timeline dot -->

  <!-- Card -->
  <div
    class="bg-gray-100 dark:bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-gray-200 dark:border-white/10 hover:border-blue-500/50 transition-all hover:scale-[1.02]"
  >
    <time class="text-sm font-semibold text-blue-600 dark:text-blue-400 mb-2 block">
      {date}
    </time>

    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">
      {title}
    </h3>

    {company && <p class="text-gray-600 dark:text-gray-400 font-medium mb-3">{company}</p>}

    <p class="text-gray-700 dark:text-gray-300 leading-relaxed text-sm">
      {description}
    </p>

    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener"
          class="inline-flex items-center gap-2 mt-4 text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
        >
          Learn more â†’
        </a>
      )
    }
  </div>
</div>
