---
import i18next from "i18next";
import ThemeToggle from "./ThemeToggle.astro";

const t = i18next.t.bind(i18next);
const currentPath = Astro.url.pathname;
const isEnglish = !currentPath.startsWith('/es');
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-white/10 transition-colors"
>
  <div class="flex justify-between items-center py-4 px-6 w-full max-w-6xl mx-auto">
    <!-- Logo/Name -->
    <a href={isEnglish ? "/" : "/es"} class="text-xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
      EF
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex flex-row gap-x-8 items-center text-gray-700 dark:text-gray-300">
      <a href={isEnglish ? "#about" : "/es#about"} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {t("header.about")}
      </a>
      <a href={isEnglish ? "#projects" : "/es#projects"} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {t("header.projects")}
      </a>
      <a href={isEnglish ? "#experience" : "/es#experience"} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {t("header.experience")}
      </a>
      <a href={isEnglish ? "#contact" : "/es#contact"} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
        {t("header.contact")}
      </a>

      <!-- Theme Toggle -->
      <div class="flex items-center gap-x-4 ml-4 border-l border-gray-200 dark:border-white/10 pl-4">
        <ThemeToggle />

        <!-- Language Switcher -->
        <div class="flex gap-x-2">
          <a
            href="/"
            class:list={["hover:text-blue-600 dark:hover:text-blue-400 transition-colors", isEnglish && "text-blue-600 dark:text-blue-400 font-bold"]}
          >
            EN
          </a>
          <span class="text-gray-400 dark:text-gray-600">|</span>
          <a
            href="/es"
            class:list={["hover:text-blue-600 dark:hover:text-blue-400 transition-colors", !isEnglish && "text-blue-600 dark:text-blue-400 font-bold"]}
          >
            ES
          </a>
        </div>
      </div>
    </nav>

    <!-- Mobile menu button (placeholder) -->
    <button class="md:hidden text-gray-900 dark:text-white">
      â˜°
    </button>
  </div>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="h-16"></div>
